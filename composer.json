{
  "require": {
    "inc2734/mimizuku": "*",
    "composer/installers": "^1.2"
  },
  "extra": {
    "installer-paths": {
      "../{$name}": ["type:wordpress-theme"]
    }
  },
  "config": {
    "process-timeout": 600
  },
  "scripts": {
    "build-mimizuku": [
      "cd $(cd $(dirname $0) && pwd)/../mimizuku && composer install --no-dev && npm install && npm run gulp build"
    ],
    "build-mimizuku-child": [
      "cd $(cd $(dirname $0) && pwd)/ && npm install && npm run gulp build"
    ],
    "post-install-cmd": [
      "composer build-mimizuku",
      "composer build-mimizuku-child"
    ],
    "post-update-cmd": [
      "composer build-mimizuku",
      "npm run gulp build"
    ],
    "scaffold-tests": "cd $(cd $(dirname $0) && pwd)/../mimizuku && composer scaffold-tests",
    "theme-unit-test": "cd $(cd $(dirname $0) && pwd)/../mimizuku && composer theme-unit-test",
    "theme-unit-test-ja": "cd $(cd $(dirname $0) && pwd)/../mimizuku && composer theme-unit-test-ja",
    "wpphpunit": "cd $(cd $(dirname $0) && pwd)/../mimizuku && composer wpphpunit",
    "phpunit": "cd $(cd $(dirname $0) && pwd)/../mimizuku && composer phpunit"
  }
}
